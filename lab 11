postgres=# CREATE TABLE products (
    id SERIAL PRIMARY KEY,
    product_name VARCHAR(100),
    category VARCHAR(50),
    price NUMERIC(10,2)
);
CREATE TABLE
postgres=# INSERT INTO products (product_name, category, price) VALUES
('Blueberry Muffin', 'Bakery', 3.5),
('Strawberry Jam', 'Grocery', 5.0),
('Chocolate Bar', 'Grocery', 2.0),
('Laptop', 'Electronics', 1200.0),
('Mouse', 'Electronics', 25.0);
INSERT 0 5
postgres=# CREATE TABLE customers (
    id SERIAL PRIMARY KEY,
    customer_name VARCHAR(100),
    email VARCHAR(100)
);
CREATE TABLE
postgres=# INSERT INTO customers (customer_name, email) VALUES
('Brandon Smith', 'brandon@gmail.com'),
('Alice Johnson', 'alicej@yahoo.com'),
('Bob Brown', 'bobb@gmail.com');
INSERT 0 3
postgres=# CREATE TABLE sales (
    id SERIAL PRIMARY KEY,
    employee_id INT REFERENCES employees(id),
    product_id INT REFERENCES products(id),
    sale_date DATE,
    amount NUMERIC(10,2)
);
CREATE TABLE
postgres=# INSERT INTO sales (employee_id, product_id, sale_date, amount) VALUES 
(1, 4, '2023-01-10', 1200.00),
(2, 5, '2023-01-12', 25.00),
(3, 4, '2023-02-05', 2400.00),
(2, 3, '2023-03-01', 10.00),
(5, 2, '2023-03-15', 5.00);
INSERT 0 5
postgres=# CREATE TABLE employee_skills (
    id SERIAL PRIMARY KEY,
    employee_id INT REFERENCES employees(id),
    skill_name VARCHAR(50)
);
CREATE TABLE
postgres=# INSERT INTO employee_skills (employee_id, skill_name) VALUES
(1, 'Python'),
(1, 'SQL'),
(2, 'Salesforce'),
(3, 'Java'),
(3, 'Management'),
(4, 'Marketing'),
