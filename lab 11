DROP TABLE
postgres=# CREATE TABLE employees (
    id SERIAL PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    email VARCHAR(100),
    department VARCHAR(50),
    salary NUMERIC(10,2),
    age INT,
    hire_date DATE,
    experience_years INT
);
CREATE TABLE
postgres=# INSERT INTO employees (name, email, department, salary, age, hire_date, experience_years) VALUES
('Alice', 'alice@gmail.com', 'Engineering', 90000, 28, '2020-06-01', 3),
('Bob', 'bob@gmail.com', 'Sales', 75000, 35, '2021-03-15', 5),
('Charlie', 'charlie@gmail.com', 'Engineering', 120000, 45, '2018-09-10', 10),
('David', 'david@gmail.com', 'Marketing', 60000, 30, '2023-01-05', 2),
('Eve', 'eve@gmail.com', 'Sales', 80000, 27, '2022-07-20', 4);
